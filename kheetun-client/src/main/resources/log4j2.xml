<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <RollingFile name="FileLoggerClient" fileName="${sys:user.home}/.kheetun/kheetun.log" filePattern="${sys:user.home}/.kheetun/kheetun.log.%i.gz">
      <PatternLayout pattern="%d %t %-5p %c{1} - %m%n"/>
      <Policies>
          <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="kheetun" level="info">
      <AppenderRef ref="FileLoggerClient"/>
    </Logger>
  </Loggers>
</Configuration>
